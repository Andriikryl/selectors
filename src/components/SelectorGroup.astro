<div>
  <h2 class="blend__title">Selectors</h2>
  <div class="timeline">
    {
      selectorsData.map((select, index) => (
        <>
          <div class="timeline__date">
            <span>{index + 1}</span>
          </div>
          <div class="timeline__separator" />
          <div class="timeline__content">
            <div class="timeline__title">{select.title}</div>
            <div class="timeline__description" />
          </div>
        </>
      ))
    }
  </div>
</div>

<style>
  .blend__title {
    color: var(--black, #1b1b1b);
    font-family: Patrick Hand;
    font-size: 30px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    letter-spacing: -0.3px;
    margin-block-end: 20px;
  }
  .box {
    display: flex;
  }
  .cover {
    --size: 50px;
    width: var(--size);
    height: var(--size);
    background-color: rgb(14, 165, 233);
    position: relative;
    z-index: 1;
    flex-shrink: 0;
  }
  .bg {
    flex-shrink: 0;
    --size: 50px;
    width: var(--size);
    height: var(--size);
    background-color: rgb(244, 63, 94);
    border-radius: 50%;
    position: relative;
    left: -29px;
    bottom: -19px;
    z-index: 10;
  }
  .timeline {
    display: grid;
    grid-column-gap: 1rem;
    grid-template-columns: 1rem 0.125rem 1fr;
  }

  .timeline__date {
    text-align: right;
  }

  .timeline__separator {
    background: rgb(203 213 225);
    position: relative;
  }
  .timeline__separator::before {
    content: "";
    position: absolute;
    top: 0.25rem;
    left: 50%;
    transform: translateX(-50%);

    background: inherit;
    border-radius: 20%;
    height: 1rem;
    width: 1rem;
  }

  .timeline__title {
    color: var(--black, #1b1b1b);
    text-transform: uppercase;
    font-family: Patrick Hand;
    font-size: 18px;
    font-style: normal;
    font-weight: 400;
    line-height: 28px;
    border-bottom: 1px solid var(--black, #1b1b1b);
