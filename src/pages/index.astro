---
import Container from "../components/Container.astro";
import Layout from "../layouts/Layout.astro";
import BlandingGroup from "../components/SelectorGroup.astro";
import Hero from "../components/Hero.astro";
import { SelectorsGroup } from "../components/SelectorsGroup.tsx";
---

<Layout title="Blending">
  <section class="test">
    <Container>
      <div class="wrapper">
        <div class="sidebar">
          <BlandingGroup />
        </div>
        <div class="main__box">
          <Hero />
          <SelectorsGroup client:visible />
        </div>
      </div>
    </Container>
  </section>
</Layout>

<style>
  .wrapper {
    margin-block: 20px;
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }
  .sidebar {
    padding: 10px;
    flex-basis: 20rem;
    flex-grow: 1;
    box-shadow:
      0 1px 1px rgba(0, 0, 0, 0.15),
      0 2px 2px rgba(0, 0, 0, 0.15),
      0 4px 4px rgba(0, 0, 0, 0.15),
      0 8px 8px rgba(0, 0, 0, 0.15);
    /* border: 1px solid tomato; */
  }
  .main__box {
    /* border: 1px solid tomato; */
    padding: 10px;
    flex-basis: 0;
    flex-grow: 999;
    min-inline-size: 50%;
    box-shadow:
      0 1px 1px rgba(0, 0, 0, 0.15),
      0 2px 2px rgba(0, 0, 0, 0.15),
      0 4px 4px rgba(0, 0, 0, 0.15),
      0 8px 8px rgba(0, 0, 0, 0.15);
  }
</style>
